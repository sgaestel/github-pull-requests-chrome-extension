{
  "manifest_version": 2,

  "name": "GitHub Pull Requests listener",
  "description": "This extension will list all pull requests (assigned / created)",
  "version": "1.1.2",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["js/jquery-2.2.4.min.js", "js/jquery-cookie.js", "js/background.js"],
    "persistent": false
  },
  "permissions": ["notifications"]
}
